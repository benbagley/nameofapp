<% if signed_in? %>
  <h2>Add a review:</h2>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p class="field">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating field">
      <%= f.label :rating %><br>
      <%= f.text_field :rating, class: "rating" %>
      </div>
    </p>
    <p>
      <div class="btn">
        <%= f.submit "Submit" %>
      </div>
    </p>
  <% end %>
<% end %>
