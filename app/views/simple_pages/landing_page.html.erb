
<h1>Welcome!</h1>

<section>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @products.each_with_index do |product, index| %>
      <li data-target="#fawesome-carousel" class="<%= "active" if product == @products.first %>data-slide-to="<%= index %>"></li>
      <% end %>
<!--
      <li data-target="#fawesome-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#fawesome-carousel" data-slide-to="1"></li>
      <li data-target="#fawesome-carousel" data-slide-to="2"></li> -->
    </ol>
    <div class="carousel-inner">
      <% @products.each do |product| %>
      <div class="carousel-item<%= " active" if product == @products.first %>">
        <%= image_tag(product.image_url, class: "d-block") %>

        <div class="carousel-caption d-none d-md-block">
          <h3><%= product.name %></h3>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</section><!--end of container-->
